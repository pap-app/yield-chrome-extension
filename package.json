    "tailwindcss": "3",
    "typescript": "^5.8.3",
    "unplugin-fonts": "^1.3.1",
    "vite": "^6.3.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint --fix"
    ],
    "*.{css,html,json}": "prettier --write"
